{
        "$schema": "http://linksmart.eu/lslc/representation#",
        "title" : "LSLC Representation",
        "description" : "Content type representation schema for Linksmart LocalConnect",
        "type" : "object",
        "properties":  {
        	"text/plain": {"type": "string"},
        	"type": {"type": "string", "default" : "Resource"},
        	"name": {"type": "string"},
            "meta": {"type": "array", "items": {"type": "string"}},
            "device": {"type": "string"},
            "representation": {},
            "protocols": {
                "type": "array",
                 "items": [ { "type": "object",
                             	"properties": {
                                  "type": {"type": "string"},
                                  "endpoint": {},
                                  "methods": {"type": "array"},
                                  "content-types": {"type": "array"}

                             	}
                            }
                          ]
            }

        },

        "required": ["id"]
        }
}