{
        "$schema": "http://json-schema.org/draft-04/schema#",
        "title" : "registration",
        "description" : "Registration schema for Linksmart LocalConnect",
        "type" : "object",
        "properties":  {
        	"id": {"type": "string"},
        	"type": {"type": "string", "default" : "Device"},
        	"name": {"type": "string"},
        	"description": {"type": "string"},
            "meta": {"type": "array", "items": {"type": "string"}},
            "ttl": {"type": "number"},
            "resources": {"type": "array", "items": {"$ref": "resource"}}
        },

        "required": ["id"]
        }
}