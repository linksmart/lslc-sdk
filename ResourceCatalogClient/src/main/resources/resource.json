{
        "$schema": "http://json-schema.org/draft-04/schema#",
        "title" : "LSLC Resource",
        "description" : "Resource schema for Linksmart LocalConnect",
        "type" : "object",
        "properties":  {
        	"id": {"type": "string"},
        	"type": {"type": "string", "default" : "Resource"},
        	"name": {"type": "string"},
            "meta": {"type": "array", "items": {"type": "string"}},
            "device": {"type": "string"},
            "representation": {},
            "protocols": {
                "type": "array",
                 "items": [ { "type": "object",
                             	"properties": {
                                  "type": {"type": "string"},
                                  "endpoint": {},
                                  "methods": {"type": "array"},
                                  "content-types": {"type": "array"}
                                              
                             	}
                            }
                          ]
            }
            
        },

        "required": ["id"]
        }
}